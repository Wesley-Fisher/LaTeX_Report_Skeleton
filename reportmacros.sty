% Figure Label, Figure filename (...png), Caption, scale
\newcommand{\addfigure}[4]
{

\begin{figure}[H]
	\centering
	\setlength{\fboxsep}{0pt}%
	\setlength{\fboxrule}{1pt}%
	\fbox{%
\includegraphics[width=#4\linewidth]{./Figures/#2}%
         }
	\caption{#3}
	\label{fig:#1}
\end{figure}
}

% Table Label, Table filename, Caption
\newcommand{\addtable}[3]
{
	\begin{table}[H]
		\centering
		\caption{#3}
		\input{./Data/#2}

		\label{tab:#1}
	\end{table}
	}
	
% Command for referencing a figure
\newcommand{\reffig}[1]
{Figure \ref{fig:#1}}

\newcommand{\reftable}[1]
{
	Table \ref{tab:#1}
}

\newcommand{\refsection}[1]
{Section \ref{#1}}

\newcommand{\refappendix}[1]
{Appendix \ref{#1}}

\newcommand{\addsection}[1]
{
	\input{./Sections/#1/_#1}	
}

\newcommand{\addsubsection}[2]
{
	\input{./Sections/#1/#2}
}

%% label, language, filename, firstline, lastline, caption
\newcommand{\addcodesnippet}[6]
{
	\lstinputlisting[language=#2, firstline=#4, lastline=#5, caption=#6, breaklines=true]{./Code/#3}
}

\newcommand{\addcodefile}[4]
{
	\lstinputlisting[language=#2, caption=#4, breaklines=true,backgroundcolor = \color{lightgray}]{./Code/#3}
}

